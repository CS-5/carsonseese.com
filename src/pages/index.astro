---
import { Image, Picture } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import backgroundImage from "../assets/background.jpg";
import portraitImage from "../assets/portrait.jpg";
import portraitCroppedImage from "../assets/portrait-cropped.jpg";
---

<MainLayout>
  <div class="absolute inset-0 -z-1">
    <Image
      src={backgroundImage}
      alt=""
      class="absolute size-full object-cover"
    />
  </div>

  <div class="absolute inset-0 backdrop-blur-sm">
    <div
      class="lg:max-w-3xl max-w-2xl mx-auto size-full flex md:flex-row flex-col justify-center items-center"
    >
      <div
        class="bg-white opacity-90 rounded-lg md:rounded-l-lg md:rounded-r-none shadow-2xl p-8 lg:p-12 shrink-0 m-8 md:m-auto text-center md:text-left"
      >
        <Picture
          class="block md:hidden mx-auto -mt-20 mb-4 size-40 rounded-full shadow-xl object-cover"
          src={portraitCroppedImage}
          alt="Carson portrait"
        />

        <div class="md:max-w-[350px] gap-y-4 flex flex-col">
          <h1 class="text-3xl font-bold">Carson Seese</h1>
          <div class="w-full border-b-2 border-primary opacity-25"></div>

          <div class="text-left">
            <div class="font-bold flex items-center">
              <svg
                class="h-4 fill-current text-primary pr-2"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9 12H1v6a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-6h-8v2H9v-2zm0-1H0V5c0-1.1.9-2 2-2h4V2a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v1h4a2 2 0 0 1 2 2v6h-9V9H9v2zm3-8V2H8v1h4z"
                ></path>
              </svg>
              Software & Cloud Engineer
            </div>

            <div class="text-sm flex items-center">
              <svg
                class="h-4 fill-current text-primary pr-2"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
              >
                <path
                  d="M10 20a10 10 0 1 1 0-20 10 10 0 0 1 0 20zm7.75-8a8.01 8.01 0 0 0 0-4h-3.82a28.81 28.81 0 0 1 0 4h3.82zm-.82 2h-3.22a14.44 14.44 0 0 1-.95 3.51A8.03 8.03 0 0 0 16.93 14zm-8.85-2h3.84a24.61 24.61 0 0 0 0-4H8.08a24.61 24.61 0 0 0 0 4zm.25 2c.41 2.4 1.13 4 1.67 4s1.26-1.6 1.67-4H8.33zm-6.08-2h3.82a28.81 28.81 0 0 1 0-4H2.25a8.01 8.01 0 0 0 0 4zm.82 2a8.03 8.03 0 0 0 4.17 3.51c-.42-.96-.74-2.16-.95-3.51H3.07zm13.86-8a8.03 8.03 0 0 0-4.17-3.51c.42.96.74 2.16.95 3.51h3.22zm-8.6 0h3.34c-.41-2.4-1.13-4-1.67-4S8.74 3.6 8.33 6zM3.07 6h3.22c.2-1.35.53-2.55.95-3.51A8.03 8.03 0 0 0 3.07 6z"
                ></path>
              </svg>
              My desk or maybe outside, USA
            </div>
          </div>

          <div class="text-sm">
            Software, security, and cloud for work. Homelab, robots, and
            hiking/biking/kayaking for fun.
          </div>

          <div class="flex gap-x-4 mx-auto md:mx-0">
            <a
              href="https://github.com/cs-5"
              target="_blank"
              rel="noreferrer"
              class="link"
            >
              <svg
                class="h-6 fill-current text-primary hover:opacity-80 transition-opacity duration-200"
                role="img"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <title>GitHub</title>
                <path
                  d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
                ></path>
              </svg>
            </a>
            <a
              href="https://linkedin.com/in/carsonseese/"
              target="_blank"
              rel="noreferrer"
              class="link"
            >
              <svg
                class="h-6 fill-current text-primary hover:opacity-80 transition-opacity duration-200"
                role="img"
                viewBox="0 0 448 512"
                xmlns="http://www.w3.org/2000/svg"
              >
                <title>LinkedIn</title>
                <path
                  d="M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <Picture
        src={portraitImage}
        alt="Carson portrait"
        class="rounded-lg shadow-2xl hidden md:block"
      />
    </div>
  </div>
</MainLayout>
